# Retail Intelligence Dashboard - Environment Variables
# Copy to .env.local and configure for your deployment

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_NAME="Retail Intelligence Dashboard"
NEXT_PUBLIC_APP_VERSION="1.0.0"
CLIENT_DEPLOYMENT=true
SNOWWHITE_SANITIZED=true

# Supabase Configuration (Optional - for persistent memory)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Memory & Security
MEMORY_ENCRYPTION_KEY=your_encryption_key_32_chars_min
SESSION_SECRET=your_session_secret

# Analytics & Monitoring (Optional)
ANALYTICS_ID=your_analytics_id
ERROR_REPORTING_DSN=your_error_reporting_dsn

# Client Theme Configuration
CLIENT_PRIMARY_COLOR=#004F4D
CLIENT_ACCENT_COLOR=#99C2B1
CLIENT_FONT_FAMILY="Segoe UI, sans-serif"

# Security Headers
CSP_REPORT_URI=your_csp_report_endpoint
SECURITY_HEADERS_ENABLED=true

# Feature Flags
ENABLE_AI_ASSISTANCE=true
ENABLE_DATA_VALIDATION=true
ENABLE_EXPORT=true
ENABLE_CHAT_MEMORY=true

# Production Optimizations
OPTIMIZE_BUNDLE=true
ENABLE_COMPRESSION=true
CACHE_STATIC_ASSETS=true
CDN_URL=your_cdn_url

# Vite Configuration
VITE_API_BASE_URL=http://localhost:3001/api