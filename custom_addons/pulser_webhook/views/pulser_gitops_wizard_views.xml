<odoo>
    <!-- Wizard Form View -->
    <record id="view_pulser_gitops_wizard_form" model="ir.ui.view">
        <field name="name">pulser.gitops.wizard.form</field>
        <field name="model">pulser.gitops.wizard</field>
        <field name="arch" type="xml">
            <form string="Git-Ops Dispatch">
                <sheet>
                    <group>
                        <group>
                            <field name="branch" placeholder="main"/>
                            <field name="message" placeholder="Deploy feature X to staging"/>
                        </group>
                        <group>
                            <field name="kv_key" placeholder="ENVIRONMENT"/>
                            <field name="kv_value" placeholder="staging"/>
                        </group>
                    </group>
                    <group string="Response Details" invisible="not response_json">
                        <field name="response_json" widget="ace" options="{'mode': 'json'}" nolabel="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_dispatch" type="object" string="Dispatch" class="btn-primary"/>
                    <button name="action_cancel" type="object" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Server Action on project.task -->
    <record id="action_pulser_dispatch_gitops" model="ir.actions.act_window">
        <field name="name">Pulser: Dispatch Git-Ops</field>
        <field name="res_model">pulser.gitops.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="project.model_project_task"/>
        <field name="binding_view_types">form</field>
        <field name="groups_id" eval="[(4, ref('base.group_system'))]"/>
    </record>
</odoo>
