<odoo>
    <data noupdate="1">
        <!-- Pulser Webhook Secret (base64-encoded) -->
        <record id="pulser_webhook_secret" model="ir.config_parameter">
            <field name="key">pulser.webhook.secret</field>
            <field name="value"></field> <!-- Set via environment variable or UI -->
        </record>

        <!-- GitHub Personal Access Token -->
        <record id="pulser_github_token" model="ir.config_parameter">
            <field name="key">pulser.github.token</field>
            <field name="value"></field> <!-- Set via environment variable or UI -->
        </record>

        <!-- GitHub Repository (owner/repo format) -->
        <record id="pulser_github_repo" model="ir.config_parameter">
            <field name="key">pulser.github.repo</field>
            <field name="value">your-org/your-repo</field> <!-- Update with actual repo -->
        </record>
    </data>
</odoo>
