<odoo>
    <!-- Tree View -->
    <record id="view_qms_error_code_tree" model="ir.ui.view">
        <field name="name">qms.error.code.tree</field>
        <field name="model">qms.error.code</field>
        <field name="arch" type="xml">
            <tree string="Error Codes">
                <field name="code"/>
                <field name="title"/>
                <field name="severity" widget="badge"
                       decoration-danger="severity == 'critical'"
                       decoration-warning="severity == 'high'"
                       decoration-info="severity == 'medium'"/>
                <field name="sop_id"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_qms_error_code_form" model="ir.ui.view">
        <field name="name">qms.error.code.form</field>
        <field name="model">qms.error.code</field>
        <field name="arch" type="xml">
            <form string="Error Code">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="title"/>
                        </group>
                        <group>
                            <field name="severity"/>
                            <field name="sop_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_qms_error_code" model="ir.actions.act_window">
        <field name="name">Error Codes</field>
        <field name="res_model">qms.error.code</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
